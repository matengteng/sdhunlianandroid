<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:marry="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="newairtek.com.marryandroid.activity.SearchActivity">


    <RelativeLayout
        android:id="@+id/search_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/rl_actionbar_back_color"
        tools:ignore="UselessParent">
        <ImageView
            android:id="@+id/iv_finish_searchActivity"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:onClick="widgetClick"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_action_bar"
        android:orientation="vertical"
        tools:ignore="UselessLeaf">
        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/psts_choose_searchActivity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            marry:pstsIndicatorColor="#ff54bfff"
            marry:pstsUnderlineColor="#ffa1a1a1"
            marry:pstsUnderlineHeight="2dp"
            marry:pstsDividerColor="#ffa1a1a1"
            marry:pstsDividerPadding="8dp"
            marry:pstsShouldExpand="true">
        </com.astuetz.PagerSlidingTabStrip>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_container_searchActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>
