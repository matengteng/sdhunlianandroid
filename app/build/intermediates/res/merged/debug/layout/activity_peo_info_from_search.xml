<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="newairtek.com.marryandroid.activity.UserInfoActivity">

    <RelativeLayout
        android:id="@+id/user_info_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/rl_actionbar_back_color"
        tools:ignore="UselessParent">
        <ImageView
            android:id="@+id/iv_finish_infoFromSearch"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:onClick="widgetClick"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_info_action_bar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scrollbars="none"
        tools:ignore="UselessLeaf">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment,UselessParent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    tools:ignore="UseCompoundDrawables">
                    <ImageView
                        android:id="@+id/iv_head_infoFromSearch"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/people_center_head_default"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击查看5张生活照片"
                        android:textSize="10sp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name_infoFromSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textSize="20sp"
                        android:textColor="#000"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_age_infoFromSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="27岁"/>
                        <TextView
                            android:id="@+id/tv_height_infoFromSearch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="182厘米"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_company_infoFromSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="山东省教育厅"
                        android:textSize="16sp"
                        android:textColor="#000"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自我介绍"
                android:textSize="24sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_content_infoFromSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="自我介绍，自我介绍自我介绍自我介绍自我介绍自我介绍自我介绍自我介绍自我介"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btn_attention_infoFromSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="widgetClick"
                android:text="关注"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btn_invite_infoFromSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="widgetClick"
                android:text="邀请"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
