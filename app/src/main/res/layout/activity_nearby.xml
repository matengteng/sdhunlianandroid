<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:marry="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="newairtek.com.marryandroid.activity.NearbyActivity">

    <RelativeLayout
        android:id="@+id/nearby_action_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/rl_actionbar_back_color"
        tools:ignore="UselessParent">
        <ImageView
            android:id="@+id/iv_finish_nearbyActivity"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:onClick="widgetClick"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近的人"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nearby_action_bar"
        android:orientation="vertical">
        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/psts_choose_nearbyActivity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            marry:pstsIndicatorColor="#ff54bfff"
            marry:pstsUnderlineColor="#ffa1a1a1"
            marry:pstsUnderlineHeight="2dp"
            marry:pstsDividerColor="#ffa1a1a1"
            marry:pstsDividerPadding="8dp"
            marry:pstsShouldExpand="true">
        </com.astuetz.PagerSlidingTabStrip>
        <newair.com.marriagenetwork.widget.autoscrollviewpager.ViewPagerCompat
            android:id="@+id/vp_container_nearbyActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </newair.com.marriagenetwork.widget.autoscrollviewpager.ViewPagerCompat>
    </LinearLayout>
</RelativeLayout>
