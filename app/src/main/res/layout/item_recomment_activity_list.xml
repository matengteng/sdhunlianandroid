<?xml version="1.0" encoding="utf-8"?>
<!--
                  近日推荐、关注我的、我关注的、附近的人、的item样式
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_img_recomment_item"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="#ffff3a47"
        tools:ignore="ContentDescription" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_name_recomment_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马腾"
                android:textSize="20sp"
                android:textColor="#000"/>

            <ImageView
                android:id="@+id/iv_sex_recomment_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_launcher"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_from_recomment_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="山东新之航软件"
            android:textSize="16sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_time_recomment_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:text="一小时前"
            android:textSize="16sp"
            android:textColor="#ffff3a47"/>
    </RelativeLayout>
</LinearLayout>